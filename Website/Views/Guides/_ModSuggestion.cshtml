@model ModSuggestion
<div class="col-md-6 col-lg-4 col-xl-3 text-center">
    @Html.DisplayFor(x => x.WarframeItem, "Mod")

    <div>
        <em>Drops From:</em>
    </div>
    <div>
        @Html.DisplayFor(x => x.DropLocation)
    </div>
    @if (!string.IsNullOrWhiteSpace(Model.WarframeItem.WikiaUrl)) {
        <a href="@Model.WarframeItem.WikiaUrl" target="_blank" rel="noopener noreferrer" class="btn btn-link">Wiki Link</a>
    }
</div>


@if (Model.UpgradeMod_Objects.SafeAny()) {
    foreach (ModSuggestion upgrade in Model.UpgradeMod_Objects) {
        <partial name="_ModSuggestion" model="upgrade" />
    }
}