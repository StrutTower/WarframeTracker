@model SearchViewModel
@{
    ViewData["Title"] = "Search";
}

<div asp-validation-summary="All"></div>

<form asp-action="Results" method="get" class="row">
    <div class="col-md-6">
        @Html.FormGroupEditorFor(x => x.AdvancedSearchModel.Name)
        @Html.FormGroupEditorFor(x => x.AdvancedSearchModel.MasteryRequirement)
        @Html.FormGroupSelectListFor(x => x.AdvancedSearchModel.CodexSection, Model.CodexSectionSelectList, "")

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>

<partial name="_ItemModal" />