@model WarframeItem

<button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
</button>

<h4 display-for="Name" class="text-center"></h4>

<p display-for="Description"></p>

@if (Model.Drops != null && Model.Drops.Any()) {
    <h5>Drop Locations</h5>
    foreach (Drop drop in Model.Drops.OrderByDescending(x => x.Chance)) {
        <div>
            <span display-for="@drop.Chance" display-template="Percentage"></span> - <span display-for="@drop.Location"></span>
            @*@Html.DisplayFor(x => drop.Chance, "Percentage") - @Html.DisplayFor(x => drop.Location)*@
            @if (drop.Rotation != null) {
                <small> Rotation: <span display-for="@drop.Rotation"></span></small>
            }
        </div>
    }
}