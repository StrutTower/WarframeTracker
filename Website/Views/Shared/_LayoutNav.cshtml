@inject IOptions<AppSettings> AppSettings
<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-3">
    <div class="container">
        <a asp-action="Index" asp-controller="Home" asp-area="" display-for="@AppSettings.Value.AppName" class="navbar-brand audiowide"></a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-navmenu">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="navbar-collapse collapse text-light" id="navbar-navmenu">
            <span class="navbar-text mr-auto">
                <environment include="Development">
                    <span class="text-warning">Development Server</span>
                </environment>
            </span>

            <ul class="navbar-nav">
                <li class="nav-item">
                    <a asp-action="Index" asp-controller="Codex" asp-area="" class="nav-link" title="Codex" data-toggle="tooltip">
                        <span class="mdi mdi-lg mdi-fw mdi-view-grid"></span><span class="d-md-none">Codex</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-action="PrimeWishlist" asp-controller="Item" asp-area="" class="nav-link" title="Prime Wishlist" data-toggle="tooltip">
                        <span class="mdi mdi-lg mdi-fw mdi-playlist-star"></span><span class="d-md-none">Prime Wishlist</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-action="Index" asp-controller="Search" asp-area="" class="nav-link" title="Search" data-toggle="tooltip">
                        <span class="mdi mdi-lg mdi-magnify"></span><span class="d-md-none">Search</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-action="PrimePrediction" asp-controller="Item" asp-area="" class="nav-link" title="Prime Release Predictions" data-toggle="tooltip">
                        <span class="mdi mdi-lg mdi-fw mdi-timelapse"></span><span class="d-md-none">Prime Release Predictions</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-action="ModularItemInfo" asp-controller="Item" asp-area="" class="nav-link" title="Modular Item Info" data-toggle="tooltip">
                        <span class="mdi mdi-lg mdi-fw mdi-box-shadow"></span><span class="d-md-none">Modular Item Info</span>
                    </a>
                </li>
                @if (User.IsInRole(RoleTypes.Administrator)) {
                    <li class="nav-item">
                        <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="nav-link" title="Site Management" data-toggle="tooltip">
                            <span class="mdi mdi-lg mdi-fw mdi-settings-outline"></span><span class="d-md-none">Site Management</span>
                        </a>
                    </li>
                }
                @if (User.Identity.IsAuthenticated) {
                    <li class="nav-item">
                        <a asp-action="Management" asp-controller="Account" asp-area="" class="nav-link" title="Account Management" data-toggle="tooltip">
                            <span class="mdi mdi-lg mdi-account"></span><span class="d-md-none">Account Management</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-action="Logout" asp-controller="Account" asp-area="" class="nav-link" title="Logout" data-toggle="tooltip">
                            <span class="mdi mdi-lg mdi-fw mdi-logout"></span><span class="d-md-none">Logout</span>
                        </a>
                    </li>
                } else {
                    <li class="nav-item">
                        <a asp-action="Login" asp-controller="Account" asp-area="" class="nav-link" title="Login" data-toggle="tooltip">
                            <span class="mdi mdi-lg mdi-fw mdi-login"></span><span class="d-md-none">Login</span>
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>
