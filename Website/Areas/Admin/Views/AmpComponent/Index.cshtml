@model IEnumerable<AmpComponent>
@{
    ViewData["Title"] = "Manage Amp Components";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home" asp-area=""><span class="mdi mdi-home mdi-lg"></span></a></li>
    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home" asp-area="Admin">Site Management</a></li>
    <li class="breadcrumb-item active"><span>@ViewData["Title"]</span></li>
</ol>

<div class="clearfix"></div>
<a asp-action="Edit" class="btn btn-link float-right">
    <span class="mdi mdi-fw mdi-plus-box-outline"></span>Add New Component
</a>

<h3>@ViewData["Title"]</h3>
<hr />

<div class="table-responsive">
    <table class="table table-sm table-striped table-bordered">
        <thead>
            <tr>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.AmpComponentType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tier)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TriggerType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaximumRange)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RoundsPerSecond)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Accuracy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DirectDamage)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AreaDamage)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CritChance)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CritMultiplier)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StatusChance)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AmmoPerShot)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EnergyConsumptionPerSecond)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RechargeDelay)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RechargePerSecond)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) @*|
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID })*@
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AmpComponentType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tier)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TriggerType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaximumRange)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoundsPerSecond)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Accuracy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DirectDamage)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AreaDamage)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CritChance)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CritMultiplier)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StatusChance)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AmmoPerShot)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EnergyConsumptionPerSecond)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RechargeDelay)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RechargePerSecond)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>