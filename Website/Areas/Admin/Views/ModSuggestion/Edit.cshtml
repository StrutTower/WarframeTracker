@model EditModSuggestionViewModel
@{
    bool editing = false;
    if (Model != null && Model.ModSuggestion != null && Model.ModSuggestion.ID != 0) {
        editing = true;
        ViewData["Title"] = "Edit Mod Suggestion";
    } else {
        ViewData["Title"] = "New Mod Suggestion";
    }
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home" asp-area=""><span class="mdi mdi-home mdi-lg"></span></a></li>
    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home" asp-area="Admin">Site Management</a></li>
    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="ModSuggestion" asp-area="Admin">Manage Mod Suggestions</a></li>
    <li class="breadcrumb-item active"><span>@ViewData["Title"]</span></li>
</ol>

<div asp-validation-summary="All"></div>

<form action="" method="post" class="row">
    @if (editing) {
        @Html.HiddenFor(x => x.ModSuggestion.ID)
    }
    @Html.HiddenFor(x => x.ModSuggestion.ModCategory)
    <div class="col-md-6">
        @Html.FormGroupSelectListFor(x => x.ModSuggestion.UniqueName, Model.ModList, "")
        @Html.FormGroupSelectListFor(x => x.ModSuggestion.PredecessorModSuggestionID, Model.ModSuggestionList, "")

        @Html.FormGroupEditorFor(x => x.ModSuggestion.Description)
        @Html.FormGroupEditorFor(x => x.ModSuggestion.DropLocation)

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>